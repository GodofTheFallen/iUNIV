/* pages/walk/walk.wxss */
.list-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}

.list-item{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  padding:20rpx;
  border-bottom: 1rpx solid gainsboro;
}

.portrait{
  width: 100rpx;
  height:100rpx;
  border-radius: 50rpx;
}

.name{
  font-size: 40rpx;
  color: #000;
  margin: 25rpx;
  text-indent: 25rpx;
}

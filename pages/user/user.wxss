/* pages/user/user.wxss */
page {
  height: 100%;
}

.tab_container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}


.nav-view {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid gainsboro;
  margin: 10rpx;
}

.tab_content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav {
  padding: 10rpx;
  width: 90%;
  display: flex;
}

.nav-view image{
  margin: 20rpx;
}

.nav_text {
  flex: 1;
  margin: 20rpx;
  text-indent: 30rpx;
  font-size: 28rpx;
}

.icon {
  width: 46rpx;
  height: 46rpx;
  margin-right: 20rpx;
}

.portrait {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 250rpx;
  height: 250rpx;
  margin-top: 24rpx;
  margin-bottom: 16rpx;
  border-radius: 125rpx;
}

.user_name {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  margin: 3rpx;
  font-size: 60rpx;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
}

.user_major {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(0, 0, 0, 0.6);
  font-size: 40rpx;
  margin-bottom: 10rpx;
  font-weight: lighter;
}

.activity_container{
  margin: 30rpx;
}

.activity_number_1 {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(0, 0, 0, 0.85);
  font-size: 30rpx;
  margin-top: 24rpx;
}

.activity_number_2 {
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(0, 0, 0, 0.85);
  font-size: 30rpx;
  margin-top: 8rpx;
}

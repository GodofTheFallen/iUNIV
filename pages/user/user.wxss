/* pages/user/user.wxss */
page {
  height: 100%;
}

.tab_container {
  width: 100%;
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav-view {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 3rpx solid gainsboro;
  margin: 10rpx;
}

.tab_content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nav {
  padding: 10rpx;
  width: 90%;
  display: flex;
}

.nav_text {
  flex: 1;
}

.icon {
  width: 46rpx;
  height: 46rpx;
  margin-right: 20rpx;
}

.portrait {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}

.user_name {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  margin: 3rpx;
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.user_major {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.activity_number_1 {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.activity_number_2 {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

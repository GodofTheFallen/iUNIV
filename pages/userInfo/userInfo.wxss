  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.user_name {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #000;
  margin: 3rpx;
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.user_major {
  display: flex;
  align-items: center;
  justify-content: center;
